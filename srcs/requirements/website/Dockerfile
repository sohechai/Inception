FROM debian:buster

LABEL maintainer="<sohechai@student.42lyon.fr>"

RUN apt-get update && apt-get upgrade -y && \
	apt-get install nginx -y

RUN mkdir site

COPY  ./site ./site
COPY ./script.sh ./

CMD sh script.sh